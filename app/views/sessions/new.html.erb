<div class="inner_page">
  <div class="signup">
    <h1><%= t ".sign_in" %></h1>
      <%= form_for :session, url: login_path do |f| %>
        <div class="form-group">
          <%= f.text_field :email, placeholder: t(".email"), class: "input-text" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, placeholder: t(".pass"),
            class: "input-text" %>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-submit"><%= t(".login") %>
          </button>
        </div>
      <% end %>
  </div>
</div>
