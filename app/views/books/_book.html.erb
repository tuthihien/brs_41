<% @books.each do |book| %>
  <tr>
    <td><%= book.category.name %></td>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= image_tag book.image.url :thumb if book.image? %></td>
    <td><%= link_to t("edit"), edit_book_path book.id,
      class: "fa fa-pencil-square-o" %>
    </td>
    <td>
      <%= link_to t("delete"), book_path book.id, method:"delete",
        data: {confirm: t("confirm")}, class: "fa fa-pencil-square-o" %>
    </td>
  </tr>
<% end %>
