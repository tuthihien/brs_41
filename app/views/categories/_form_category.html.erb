<%= form_for @category do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.text_field :name, placeholder: t(".name"), class: "input-text" %>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-submit"><%= t ".create" %></button>
  </div>
<% end %>
